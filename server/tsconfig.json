{
    "compilerOptions": {
        "lib": ["es2021"],
        "module": "commonjs",
        "target": "es2021",

        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "watch": true,
        "outDir": "dist",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "types": ["node"]
    },

    "types": ["node"],
    "include": ["src/**/*"],
    "exclude": ["node_modules"],
    "extends": "@tsconfig/node16/tsconfig.json",
    "typeRoots": ["../node_modules/@types"],
    "display": "Node 16"
}
